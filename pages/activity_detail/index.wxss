  font-weight: 600;
}
.btm_tool .btn_col {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm_tool .btn_col1 {
  flex: 2;
