<view class="con_index">
  <SearchInput></SearchInput>
</view>
<view class="index_navigate" >
    <view class="myhealth" bindtap="handleGetnav">
      <view class="iconfont icon-shenfenzheng"></view>
      <view class="health_sign">
        <view class="sign_one">我的健康码</view>
        <view class="sign_two">一码在手，通行无忧</view>

      </view>
    </view>
</view>

<view class="index_cate">
  <navigator 
  wx:for = "{{catesList}}"
  wx:key = "id"
  url = "{{item.url}}"
  bindtap = "{{item.bind}}">
    <view class="cate_content">
      <image mode="widthFix" src = "{{item.image_src}}"></image>
      <text>{{item.name}}</text>
    </view>
  </navigator>
</view>

<view class="index_swiper">
  <swiper autoplay indicator-dots circular>
    <swiper-item
    wx:for = "{{swiperList}}"
    wx:key = "id">
      <image mode="widthFix" src = "{{item.image_src}}"></image>
    </swiper-item>
      
  </swiper>
</view>

<view class="index_comment">
  <view class="comment_title">疫情时报</view>
  <navigator class="comment_content" 
  wx:for = "{{commentList}}"
  wx:key = "_id"
  url="/pages/comment_detail/index?_id={{item._id}}"
  >
   
    <view class="comment_list">
      <text>{{item.name}}</text>
    </view>
    
  </navigator>
    
</view>