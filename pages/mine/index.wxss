page {
  background-color: #e5f2ff;
}
.user_info_warp {
  height: 40vh;
  position: relative;
}
.user_info_warp .user_img_warp {
  position: relative;
}
.user_info_warp .user_img_warp .user_bg {
  width: 100%;
  height: 40vh;
  filter: blur(15rpx);
}
.user_info_warp .user_img_warp .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  text-align: center;
}
.user_info_warp .user_img_warp .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_warp .user_img_warp .user_info .user_name {
  color: #fff;
  margin-top: 30rpx;
  font-size: 40rpx;
}
.user_info_warp .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  padding: 35rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 80rpx;
  background-color: #fff;
}
.user_content .user_main .info_title {
  font-size: 40rpx;
  margin: 20rpx 40rpx;
  font-weight: 700;
}
.user_content .user_main .info_content navigator {
  display: flex;
  align-items: center;
  margin: 20rpx 40rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0;
}
.user_content .user_main .info_content navigator .icon-huodong {
  color: var(--themeColor);
  font-size: 45rpx;
}
.user_content .user_main .info_content navigator .icon-shoucang {
  font-size: 45rpx;
  color: #DAA520;
}
.user_content .user_main .info_content navigator .act_me {
  font-size: 34rpx;
  margin: 0 10rpx;
}
